<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Localization -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>

    <!-- Display Name -->
    <key>CFBundleDisplayName</key>
    <string>ORIVO</string>

    <!-- Executable Name -->
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <!-- App Identifier -->
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

    <!-- Info Dictionary Version -->
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>

    <!-- App Name -->
    <key>CFBundleName</key>
    <string>auro</string>

    <!-- App Package Type -->
    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- Version Information -->
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>CFBundleSignature</key>
    <string>????</string>

    <!-- iPhone OS Requirement -->
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- Launch Screen -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- Main Storyboard -->
    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <!-- Supported Interface Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Minimum Frame Duration on Phone -->
    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>

    <!-- Indirect Input Events -->
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>

    <!-- Status Bar Visibility -->
    <key>UIStatusBarHidden</key>
    <false/>

    <!-- Permissions for Camera -->
    <key>NSCameraUsageDescription</key>
    <string>This app requires access to the camera to take photos and videos.</string>

    <!-- Permissions for Photo Library -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>This app needs access to your photo library to select or save media.</string>
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>This app needs access to your photo library to save media files.</string>

    <!-- Firebase Configuration -->
    <key>FirebaseAppDelegateProxyEnabled</key>
    <false/>

    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>

    <!-- Push Notifications -->
    <key>NSPushNotificationsUsageDescription</key>
    <string>Enable push notifications to stay informed.</string>

    <!-- Notifications -->
    <key>NSUserNotificationUsageDescription</key>
    <string>This app needs permission to send notifications to keep you informed.</string>

    <!-- APNs Token Handling -->
    <key>aps-environment</key>
    <string>development</string> <!-- Change to 'production' for a live app -->

    <!-- Required for Firebase Messaging on iOS -->
    <key>FirebaseMessagingAutoInitEnabled</key>
    <true/>
</dict>
</plist>
